<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TemperatureTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/temperature_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlaceTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ClockTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="cardHeadTitle">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="cardItemPersonName">
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="cardItemComment">
        <item name="android:textColor">#787878</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="cardItemCommentDate">
        <item name="android:textColor">#d6d6d6</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="textColor1">#5A5A5A</item>
        <item name="textColor2">#7B7B7B</item>
        <item name="bgColor">#ffffff</item>
        <item name="color3">#D3D3D3</item>
        <item name="colorBlue">#2196F3</item>
        <item name="tintColor">#A1FFFFFF</item>
        <item name="festCard_color">#ffffff</item>
        <item name="festCard_name">#2E2E2E</item>
        <item name="festCard_date">#9C27B0</item>
        <item name="festCard_about">#5F5F5F</item>
        <item name="festCard_loc">#484848</item>
        <item name="bordercolor">#ffffff</item>

    </style>
    <style name="DarkTheme" parent="AppTheme">
        <item name="textColor1">#DFDFDF</item>
        <item name="textColor2">#E3E3E3</item>
        <item name="bgColor">#26075B</item>
        <item name="color3">#5021A5</item>
        <item name="colorBlue">#ffffff</item>
        <item name="tintColor">#353535</item>
        <item name="festCard_color">#171717</item>
        <item name="festCard_name">#FDFDFD</item>
        <item name="festCard_date">#C7C7C7</item>
        <item name="festCard_about">#BABABA</item>
        <item name="festCard_loc">#B3B3B3</item>
        <item name="bordercolor">#DCDCDC</item>

    </style>


</resources>
