<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8EBFF"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profileillus"
        android:id="@+id/image_profile"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_layout"
        />

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/bottom_layout"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="45dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <TextView
                android:id="@+id/profile_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="62dp"
                android:text="Your profile"
                android:textColor="#000000"
                android:gravity="start"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/sourcesanspro_bold"

                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_alignParentRight="true"
                android:id="@+id/create_profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="35dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/profile_info"
            android:layout_marginLeft="62dp"
            android:text="Please provide these details"
            android:textColor="#646464"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/sourcesanspro_regular"
            android:layout_marginBottom="33dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="62dp"
                    android:id="@+id/age_label"
                    android:text="Enter age"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:fontFamily="@font/sourcesanspro_regular"
                    />
                <EditText
                    android:id="@+id/profile_age"
                    android:textColor="#1E012E"
                    android:textColorHint="#7881EAD7"
                    android:paddingStart="15dp"
                    android:text=""
                    android:paddingLeft="15dp"
                    android:inputType="number"
                    android:layout_marginLeft="60dp"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/roundcorner_edit_login_new"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/gender_label"
                    android:text="Enter age"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:fontFamily="@font/sourcesanspro_regular"
                    />
                <Spinner
                    android:id="@+id/profile_gender"
                    android:textColor="#1E012E"
                    android:textColorHint="#7881EAD7"
                    android:paddingStart="15dp"
                    android:text=""
                    android:paddingLeft="15dp"
                    android:inputType="number"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="20sp"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@drawable/roundcorner_edit_login_new"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="62dp"
            android:id="@+id/name_label"
            android:text="Enter your name"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:fontFamily="@font/sourcesanspro_regular"
            />
        <EditText
            android:id="@+id/profile_name"
            android:shadowColor="#3981EAD7"
            android:textColor="#1E012E"
            android:textColorHint="#7881EAD7"
            android:text=""
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="18dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/roundcorner_edit_login_new"
            android:gravity="center_vertical"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="62dp"
            android:id="@+id/username_label"
            android:text="Maritial Status"
            android:textColor="#000000"
            android:textSize="13sp"
            android:fontFamily="@font/sourcesanspro_regular"
            />
        <Spinner
            android:id="@+id/user_name"
            android:textColor="#1E012E"
            android:textColorHint="#7881EAD7"
            android:paddingStart="15dp"
            android:text=""
            android:paddingLeft="15dp"
            android:inputType="text"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/roundcorner_edit_login_new"
            android:gravity="center_vertical"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="62dp"
            android:id="@+id/profile_religion_label"
            android:text="Religion"
            android:textColor="#000000"
            android:textSize="13sp"
            android:fontFamily="@font/sourcesanspro_regular"
            />
        <Spinner
            android:id="@+id/profile_religion"
            android:textColor="#1E012E"
            android:textColorHint="#7881EAD7"
            android:paddingStart="15dp"
            android:text=""
            android:paddingLeft="15dp"
            android:inputType="text"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/roundcorner_edit_login_new"
            android:gravity="center_vertical"
            android:textSize="14sp" />
        <Button
            android:id="@+id/create_profile_button"
            android:layout_marginTop="30dp"
            android:layout_width="160dp"
            android:layout_height="36dp"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/bg_button_dark_purple"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_progress"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#A4000000">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progressbar"/>
    </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
