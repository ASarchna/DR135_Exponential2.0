<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="131.5dp"
        android:layout_margin="20dp"
        android:background="#ffffff">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="110dp">

<com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/packageImage"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
    app:roundedCornerRadius="10dp"
                app:retryImageScaleType="fitXY"
                app:placeholderImage="@drawable/goa_chitra_meuseum" />


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/package_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="6sp"
                    android:text="-----"
                    android:textColor="#000000"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <RatingBar
                    android:id="@+id/RatingBar_Id"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="1"
                    android:progressTint="#f15421"
                    android:rating="4" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.4dp"
                    android:letterSpacing="-0.01"
                    android:id="@+id/rating_reviews"
                    android:lineSpacingExtra="4sp"
                    android:text="--  |  -- reviews"
                    android:textColor="#bec2ce"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:letterSpacing="-0.01"

                    android:lineSpacingExtra="4sp"
                    android:text="from"
                    android:textColor="#bec2ce"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/package_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.4dp"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="0sp"
                    android:text="Rs. --"
                    android:textColor="#1f2533"
                    android:textSize="18sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_bookmark_black_24dp"
                        android:tint="#bec2ce" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>