<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/userImageVIew"
        android:layout_width="50dp"
        app:roundAsCircle="true"
        android:layout_height="50dp"
        app:placeholderImage="@drawable/ic_user"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="person userImageVIew" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/userImageVIew"
        android:layout_toEndOf="@id/userImageVIew"
        android:text="------"
        android:layout_toRightOf="@id/userImageVIew"
        android:textAppearance="@style/cardItemPersonName" />

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/userName"
        android:layout_alignStart="@id/userName"
        android:text="------"
        android:layout_below="@id/userName"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/userImageVIew"
        android:layout_toRightOf="@id/userImageVIew"
        android:textAppearance="@style/cardItemComment" />

    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/userName"
        android:text="07 mar 2017"
        android:textAppearance="@style/cardItemCommentDate" />

</RelativeLayout>